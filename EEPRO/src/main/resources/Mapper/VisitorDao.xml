<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.ssm_springbootx.dao.VisitorDao">

    <insert id="addVisitor">
        insert into T_VISITOR (VI_ID, VI_NAME, VI_PASS) VALUES (SEQ_VI.nextval,#{viName},#{viPass})
    </insert>

    <update id="updateVisitor">
        UPDATE T_VISITOR
        <set>
            <if test="viName!=null">
                VI_NAME=#{viName},
            </if>
            <if test="viPass!=null">
                VI_PASS=#{viPass},
            </if>
        </set>
        WHERE VI_ID=#{viId}
    </update>

    <delete id="deleteVisitor">
        DELETE FROM T_VISITOR WHERE VI_ID=#{viId}
    </delete>

    <select id="getVisitor" resultMap="visitor">
        SELECT * FROM T_VISITOR
        left outer join T_BASIC on BS_VIID=VI_ID
        left outer join T_RESUME on RS_VIID=VI_ID
        <where>
        <if test="viId!=0">
        VI_ID=#{viId}
        </if>
        <if test="viName!=null">
        AND VI_NAME=#{viName}
        </if>
        <if test="viPass!=null">
        AND VI_PASS=#{viPass}
        </if>
        </where>
    </select>

    <resultMap id="visitor" type="com.example.ssm_springbootx.model.Visitor" extends="non-orm.VISITOR">
        <association property="basic" resultMap="non-orm.BASIC" />
        <association property="resume" resultMap="non-orm.RESUME"/>
    </resultMap>

</mapper>